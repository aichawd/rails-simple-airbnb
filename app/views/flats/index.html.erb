<div class="container">
  <h1>All our flats (<%= @flats.count %>)</h1>

  <div class="row">
    <% @flats.each do |flat| %>
      <div class="card col-sm-12 col-md-2 col-lg-4 m-3" style="width: 18rem;">
        <img class="card-img-top" src="https://picsum.photos/300/180" alt="image placeholder">
        <div class="card-body">
          <h5 class="card-title"><%= flat.name %></h5>
          <p class="card-text"><%= flat.address %></p>
          <p>
            <i class="fa-solid fa-user-group"></i> &nbsp; <%= flat.number_of_guests %>&nbsp;&nbsp;
            <i class="fa-solid fa-euro-sign"></i> &nbsp; <%= flat.price_per_night %>
          </p>

          <span ><%= link_to 'More info', flat_path(flat), class: "link-primary mx-2" %></span>
          <span><%= link_to 'Edit', edit_flat_path(flat), class: "link-warning mx-2"  %></span>
          <span ><%= link_to 'Remove', flat_path(flat),
            method: :delete,
            data: { confirm: "Are you sure you want to delete this flat?"},
            class: "link-danger mx-2"  %></span>
        </div>
      </div>
    <% end %>
  </div>

</div>
